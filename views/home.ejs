<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/homeStyle.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

  </head>
  <body class="gradient-bg">
    <div
      class="d-flex align-items-center justify-content-center"
      style="height: 70vh"
    >
    
    <div class="container-fluid">
      <!-- Todo Form -->
      <div class="row justify-content-center mt-5">
        <div class="col-md-6">
          <div class="card bg-light">
            <div class="card-body">
              <h5 class="card-title text-center ">Add Todo</h5>
              <form action="/addTodo" id="todoForm"  method="post">
                <div class="mb-3 d-flex align-items-center">
                  <label for="title" class="form-label fs-4">Task</label>
                  <input type="text" class="form-control ms-3" required id="taskInput" name="task">
                  <button type="submit" id="btnAdd" class="btn btn-primary ms-3">Add </button>

                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    
      <% todos.forEach(todo => { %>
        <div class="row mt-2">
          <div class="col-md-6 offset-md-3">
            <div class="card">
              <div class="card-body d-flex  align-items-center justify-content-between ">
                <ul class="list-group fs-3" id="task_<%= todo._id %>">
                  <%= todo.Task %>
                </ul>
                <div >
                  <a href="/deleteTodo/<%= todo._id %>" class="fs-3 mx-3"><i class="fas fa-trash"></i></a>
                  <a href="" data-bs-toggle="modal" data-bs-target="#exampleModal_<%=todo._id  %>"  class="fs-3"><i class="fas fa-pen"></i></a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal fade" id="exampleModal_<%=todo._id  %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
              <div class="modal-content">
                  <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Edit Task</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                      <form id="editTaskForm" method="post" action="/updateTodo/<%= todo._id %>">
                          <div class="mb-3">
                              <label for="editTaskInput" class="form-label">Task</label>
                              <input type="text" class="form-control" value="<%= todo.Task %>" id="editTaskInput" name="task">
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                      </form>
                  </div>
                  
              </div>
          </div>
      </div>
      <% }) %>
      
      
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
   
  </body>
</html>
